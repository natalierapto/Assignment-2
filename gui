    private void btnMiTMActionPerformed(java.awt.event.ActionEvent evt) {                                        
        int value;
        double factor;
        try {
            value = Integer.parseInt(txtBoxVal.getText());
        }
        catch (NumberFormatException e) {
            value = 0;
        }
        factor = value * 1609.344;
        txtAnswer.setText(value + " in miles is " + factor + " in meters.");
    }                                       

    private void btnFtMActionPerformed(java.awt.event.ActionEvent evt) {                                       
        int value;
        double factor;
        try {
            value = Integer.parseInt(txtBoxVal.getText());
        }
        catch (NumberFormatException e) {
            value = 0;
        }
        factor = value * 0.3048;
        txtAnswer.setText(value + " in feet is " + factor + " in meters.");
    }                                      

    private void btnCTIActionPerformed(java.awt.event.ActionEvent evt) {                                       
        int value;
        double factor;
        try {
            value = Integer.parseInt(txtBoxVal.getText());
        }
        catch (NumberFormatException e) {
            value = 0;
        }
        factor = value * 0.3937007874;
        txtAnswer.setText(value + " in centimeters is " + factor + " in inches.");
    }                                      

    private void btnKTLActionPerformed(java.awt.event.ActionEvent evt) {                                       
        int value;
        double factor;
        try {
            value = Integer.parseInt(txtBoxVal.getText());
        }
        catch (NumberFormatException e) {
            value = 0;
        }
        factor = value * 2.2046226218;
        txtAnswer.setText(value + " in kilograms is " + factor + " in pounds.");
    }                                      

